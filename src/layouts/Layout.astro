---
import Logo from "../assets/logo.svg";
import "../global.css";
import ThreeScene from "../components/three/ThreeScene"
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div class="bg-white">
      <div class="mx-auto max-w-7xl px-4">
        <header
          class="mx-auto max-w-7xl w-full flex justify-between items-center py-8 px-6"
        >
        <a href={Astro.url.origin}>
          <img src={Logo} alt="logo" class="w-14" />
        </a>
          <nav class="flex gap-x-5">
            <a
              class="hover:text-slate-500 transition-[color] font-thin"
              href="/about">About</a
            >
          </nav>
        </header>
      </div>
    </div>
    <div class="mx-auto max-w-7xl px-4">
      <slot />
    </div>
    <footer class="bottom-0 left-0 right-0 w-full h-[400px] bg-stars bg-center bg-cover">
    <ThreeScene client:load/>
    </footer>
  </body>
</html>
