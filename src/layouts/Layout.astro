---
import Logo from "../assets/logo.svg";
import "../global.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-white">
      <div class="mx-auto max-w-7xl px-4">
        <header
          class="mx-auto max-w-7xl w-full flex justify-between items-center py-8 px-6"
        >
          <img src={Logo} alt="logo" class="w-14" />
          <nav class="flex gap-x-5">
            <a
              class="hover:text-slate-500 transition-[color] font-thin"
              href="/posts">Posts</a
            >
            <a
              class="hover:text-slate-500 transition-[color] font-thin"
              href="/">Home</a
            >
            <a
              class="hover:text-slate-500 transition-[color] font-thin"
              href="/about">About</a
            >
          </nav>
        </header>
      </div>
    </div>
    <div class="mx-auto max-w-7xl px-4">
      <slot />
    </div>
  </body>
</html>
